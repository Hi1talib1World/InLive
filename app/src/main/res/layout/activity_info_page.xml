<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkAccent"
    tools:context=".InfoPage">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/info_img_ken"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.35"
        android:src="@drawable/dummy_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_top"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dummy_img" />

    <TextView
        android:id="@+id/tv_mainHead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/exo_black"
        android:text="Movie Name"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_subHead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/exo_2_medium"
        android:text="127Min â€¢ 4K"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_mainHead"
        app:layout_constraintStart_toEndOf="@+id/img_subH"
        app:layout_constraintTop_toBottomOf="@+id/tv_mainHead" />

    <ScrollView
        android:id="@+id/scrl_info"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_subH">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_trivia11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/exo_2_bold"
                android:text="Trivia :"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="1"
                android:fontFamily="@font/roboto_medium"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exerc"
                android:textColor="#cfcfcf"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_director11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/exo_2_bold"
                android:text="Director :"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_dir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="1"
                android:fontFamily="@font/roboto_medium"
                android:text="Lorem ipsum dolor sit amet, "
                android:textColor="#cfcfcf"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_cast11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/exo_2_bold"
                android:text="Cast :"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_cast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="1"
                android:fontFamily="@font/roboto_medium"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exerc"
                android:textColor="#cfcfcf"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_rel_date11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/exo_2_bold"
                android:text="Release date :"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_relDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:alpha="1"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#cfcfcf"
                android:visibility="visible" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_watchNow"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="24dp"
        android:alpha="0.35"
        android:background="@drawable/play_cir"
        android:fontFamily="@font/exo_black"
        android:textColor="@color/DarkAccent"
        app:layout_constraintEnd_toStartOf="@+id/btn_share1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_download"
        app:layout_constraintTop_toBottomOf="@+id/tv_subHead" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/left_arrow" />

    <ProgressBar
        android:id="@+id/prog_info_page"
        style="?android:attr/progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:indeterminate="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_subH" />

    <TextView
        android:id="@+id/tv_info_wait"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="Please wait..! Only the First Load takes time"
        android:textColor="#989898"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prog_info_page" />

    <Button
        android:id="@+id/btn_download"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:alpha="0.35"
        android:background="@drawable/down_cir"
        android:fontFamily="@font/exo_black"
        android:textColor="@color/DarkAccent"
        app:layout_constraintBottom_toBottomOf="@+id/btn_watchNow"
        app:layout_constraintEnd_toStartOf="@+id/btn_watchNow"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img_subH"
        app:layout_constraintTop_toBottomOf="@+id/tv_subHead"
        app:layout_constraintVertical_bias="0.7" />

    <ImageView
        android:id="@+id/img_subH"
        android:layout_width="120dp"
        android:layout_height="160.8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mainHead"
        app:srcCompat="@drawable/dummy_img" />

    <Button
        android:id="@+id/btn_share1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:alpha="0.35"
        android:background="@drawable/share_cir"
        app:layout_constraintBottom_toBottomOf="@+id/btn_watchNow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_watchNow"
        app:layout_constraintTop_toBottomOf="@+id/tv_subHead"
        app:layout_constraintVertical_bias="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>